@model List<eBookLibrary.Models.BorrowedBookViewModel>
<div class="container mt-4">
    <h2>Borrowed Books</h2>
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    <!-- Check if the model is not null and contains any books -->
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Due Date</th>
                    <th>Time Left</th>
                    <th>Actions</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.DueDate.ToString("yyyy-MM-dd")</td>
                        <!-- Calculate time left -->
                        <td>
                            @if ((book.DueDate - DateTime.Now).TotalDays <= 0)
                            {
                                <span class="text-danger">Overdue!</span>
                            }
                            else
                            {
                                <span>@((book.DueDate - DateTime.Now).Days) days left</span>
                            }
                        </td>
                        <td>
                            <!-- Return Button -->
                            @if ((book.DueDate - DateTime.Now).TotalDays <= 0)
                            {
                                <span class="text-danger">Overdue!</span>
                            }
                            else
                            {
                                <form method="post" action="/User/ReturnBook" class="d-inline">
                                    <input type="hidden" name="bookId" value="@book.BookId" />
                                    <button type="submit" class="btn btn-warning btn-sm"
                                            onclick="return confirm('Are you sure you want to return this book?');">
                                        Return
                                    </button>
                                </form>
                            }
                        </td>
                        <!-- Review Button and Modal -->
                        <td>
                            <button type="button" class="btn btn-primary btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#reviewModal-@book.BookId">
                                Write Review
                            </button>

                            <!-- Review Modal -->
                            <div class="modal fade" id="reviewModal-@book.BookId" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Write a Review for @book.Title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" action="@Url.Action("SubmitReview", "User", new { bookId = book.BookId })">
                                            <div class="modal-body">
                                                <!-- Rating -->
                                                <div class="form-group mb-3">
                                                    <label class="form-label">Rating:</label>
                                                    <select class="form-select" name="ratingValue" required>
                                                        <option value="">Select rating</option>
                                                        <option value="1">1 - Poor</option>
                                                        <option value="2">2 - Fair</option>
                                                        <option value="3">3 - Good</option>
                                                        <option value="4">4 - Very Good</option>
                                                        <option value="5">5 - Excellent</option>
                                                    </select>
                                                </div>
                                                <!-- Review Text -->
                                                <div class="form-group">
                                                    <label class="form-label">Your Review:</label>
                                                    <textarea class="form-control"
                                                              name="feedback"
                                                              rows="4"
                                                              required
                                                              placeholder="Write your review here..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Submit Review</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No borrowed books at the moment.</p>
    }
</div>