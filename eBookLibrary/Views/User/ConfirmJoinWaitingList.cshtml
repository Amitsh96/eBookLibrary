@model eBookLibrary.Models.WaitingListViewModel

<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-primary mb-4">Join Waiting List</h2>
        <p class="lead">The book "<strong>@ViewBag.BookTitle</strong>" is currently unavailable. Do you want to join the waiting list?</p>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card p-4" style="max-width: 600px; width: 100%; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <form method="post" action="/User/AddToWaitingListConfirmed">
                <input type="hidden" name="bookId" value="@Model.BookId" />

                <div class="form-group mb-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg w-100">Yes, join the waiting list</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="@Url.Action("ExploreBooks", "User")" class="btn btn-outline-secondary w-100">No, go back to explore books</a>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some custom CSS for better aesthetics -->
@section Styles {
    <style>
        .card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }

        .text-center h2 {
            color: #007bff;
        }

        .lead {
            font-size: 1.2rem;
        }
    </style>
}
