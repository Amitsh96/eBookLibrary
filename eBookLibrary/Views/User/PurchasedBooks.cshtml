@model List<eBookLibrary.Models.PurchasedBookViewModel>
<div class="container mt-4">
    <h2 class="text-success text-center">Purchased Books</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Purchase Date</th>
                    <th>Actions</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr id="purchased-book-@book.BookId">
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.PurchaseDate.ToString("yyyy-MM-dd")</td>
                        <!-- Delete Book Action -->
                        <td>
                            <form method="post" action="/User/DeletePurchasedBook"
                                  onsubmit="return confirm('Are you sure you want to delete this book from your library?');">
                                <input type="hidden" name="bookId" value="@book.BookId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                        <!-- Add Review Button and Modal -->
                        <td>
                            <button type="button" class="btn btn-primary btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#reviewModal-@book.BookId">
                                Write Review
                            </button>

                            <!-- Review Modal -->
                            <div class="modal fade" id="reviewModal-@book.BookId" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Write a Review for @book.Title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" action="@Url.Action("SubmitReview", "User", new { bookId = book.BookId })">
                                            <div class="modal-body">
                                                <!-- Rating -->
                                                <div class="form-group mb-3">
                                                    <label class="form-label">Rating:</label>
                                                    <select class="form-select" name="ratingValue" required>
                                                        <option value="">Select rating</option>
                                                        <option value="1">1 - Poor</option>
                                                        <option value="2">2 - Fair</option>
                                                        <option value="3">3 - Good</option>
                                                        <option value="4">4 - Very Good</option>
                                                        <option value="5">5 - Excellent</option>
                                                    </select>
                                                </div>
                                                <!-- Review Text -->
                                                <div class="form-group">
                                                    <label class="form-label">Your Review:</label>
                                                    <textarea class="form-control"
                                                              name="feedback"
                                                              rows="4"
                                                              required
                                                              placeholder="Write your review here..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Submit Review</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You have not purchased any books yet.</p>
    }
</div>