@model List<eBookLibrary.Models.Book>

<div class="container mt-4">
    <!-- TempData Notifications -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center">@TempData["Message"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    <!-- Title for Explore Books -->
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold" style="color: var(--primary-color);">Literary Discoveries</h2>
        <p class="lead text-muted">Explore our curated collection of digital treasures</p>
    </div>

    <!-- Search Form -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form method="get" action="/User/ExploreBooks" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchQuery" class="form-control shadow-sm" placeholder="Search by title, author, or publisher" style="border-radius: 25px 0 0 25px; padding: 12px 20px;" />
                    <button type="submit" class="btn btn-primary" style="border-radius: 0 25px 25px 0; padding: 0 25px;">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Filtering and Sorting Section -->
    <div class="row mb-5">
        <div class="col-md-6 text-center">
            <label for="sortOrder" class="form-label" style="font-weight: 500; color: var(--primary-color);">
                <i class="bi bi-sort-alpha-down me-1"></i> Browse By:
            </label>
            <form method="get" action="/User/ExploreBooks" class="d-inline">
                <select id="sortOrder" name="sortOrder" class="form-select d-inline-block w-auto" onchange="this.form.submit()">
                    <option value="">-- Select Sorting --</option>
                    <option value="PriceAsc">Price (Low to High)</option>
                    <option value="PriceDesc">Price (High to Low)</option>
                    <option value="MostPopular">Most Popular</option>
                    <option value="Genre">Genre</option>
                    <option value="Year">Year</option>
                    <option value="TitleAsc">Title (A to Z)</option>
                    <option value="TitleDesc">Title (Z to A)</option>
                </select>
            </form>
        </div>

        <div class="col-md-6 text-center">
            <form method="get" action="/User/ExploreBooks" class="d-inline">
                <div class="form-check form-switch d-inline-block">
                    <input type="checkbox" name="onlyDiscounted" id="onlyDiscounted" class="form-check-input" value="true"
                    @(Context.Request.Query["onlyDiscounted"] == "true" ? "checked" : "") onchange="this.form.submit()" />
                    <label for="onlyDiscounted" class="form-check-label" style="color: var(--accent-color); font-weight: 500;">
                        <i class="bi bi-tag-fill me-1"></i> Show Only Discounted Items
                    </label>
                </div>
            </form>
        </div>
    </div>

    <!-- Table for Displaying Books -->
    <div class="table-responsive">
        <table class="table table-hover table-custom align-middle">
            <thead>
                <tr>
                    <th scope="col">Cover</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Format</th>
                    <th scope="col">Available</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Year</th>
                    <th scope="col">Age Limit</th>
                    <th scope="col">Price</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var book in Model)
                    {
                        <tr>
                            <!-- Cover Image -->
                            <td>
                                @if (!string.IsNullOrEmpty(book.CoverImage))
                                {
                                    <img src="@book.CoverImage" alt="@book.Title" class="img-thumbnail rounded shadow-sm" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/100x150" alt="No image" class="img-thumbnail rounded shadow-sm" />
                                }
                            </td>
                            <td class="fw-semibold">@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Publisher</td>
                            <td><span class="badge bg-secondary">@book.Format</span></td>
                            <td>
                                @if (book.AvailableCopies > 0)
                                {
                                    <span class="badge" style="background-color: var(--secondary-color);">@book.AvailableCopies</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </td>
                            <td><span class="badge" style="background-color: var(--primary-color);">@book.Genre</span></td>
                            <td>@book.Year</td>
                            <td>
                                @if (book.AgeLimit > 0)
                                {
                                    <span class="badge" style="background-color: var(--accent-color);">@book.AgeLimit+</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">All Ages</span>
                                }
                            </td>
                            <td class="fw-semibold">
                                @if (book.DiscountEndDate != null && book.DiscountEndDate > DateTime.Now)
                                {
                                    <span class="text-decoration-line-through text-muted">$@book.PricePurchase.ToString("0.00")</span>
                                    <span class="ms-1 text-success">$@(book.DiscountedPrice?.ToString("0.00") ?? "0.00")</span>
                                }
                                else
                                {
                                    <span>$@book.PricePurchase.ToString("0.00")</span>
                                }
                            </td>
                            <td>
                                @if (book.AverageRating > 0)
                                {
                                    <div>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(book.AverageRating))
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else if (i - 0.5 <= book.AverageRating)
                                            {
                                                <i class="bi bi-star-half text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">No ratings</span>
                                }
                            </td>
                            
                            <!-- Actions Column -->
                            <td>
                                <div class="btn-group" role="group" aria-label="Book Actions">
                                    @if (book.AvailableCopies > 0)
                                    {
                                        <!-- Borrow Button Form (POST) -->
                                        <form asp-controller="User" asp-action="BorrowBook" method="post" class="d-inline me-1">
                                            <input type="hidden" name="bookId" value="@book.BookId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-primary" title="Borrow">
                                                <i class="bi bi-journal-arrow-down"></i>
                                            </button>
                                        </form>

                                        <!-- Purchase Link (GET to Checkout) -->
                                        <a asp-controller="User" asp-action="Checkout" asp-route-bookId="@book.BookId" asp-route-actionType="Purchase" class="btn btn-sm btn-success me-1" title="Purchase">
                                             <i class="bi bi-cart-plus"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <!-- Join Waiting List Form (POST) -->
                                        <form asp-controller="User" asp-action="AddToWaitingListConfirmed" method="post" class="d-inline me-1">
                                            <input type="hidden" name="bookId" value="@book.BookId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-warning" title="Join Waiting List">
                                                <i class="bi bi-hourglass-split"></i>
                                            </button>
                                        </form>
                                    }
                                     <!-- Link to Reviews Page -->
                                     <a asp-controller="User" asp-action="Reviews" asp-route-bookId="@book.BookId" class="btn btn-sm btn-secondary" title="View Reviews">
                                        <i class="bi bi-chat-left-text"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center">
                                <i class="bi bi-journal-x" style="font-size: 3rem; color: var(--primary-color); opacity: 0.5;"></i>
                                <h5 class="mt-3">No books found</h5>
                                <p class="text-muted">Try adjusting your search or filter criteria</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
