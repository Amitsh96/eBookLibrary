@{
    ViewData["Title"] = "Create Account - ";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, var(--secondary-color), #00897b); color: white;">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-person-plus me-2"></i>Join LuminaPages
                    </h3>
                    <p class="text-white-50 small mb-0 mt-1">Create your digital library account</p>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    
                    <form method="post" action="/Account/Register" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="email" class="form-label fw-medium" style="color: var(--text-color);">
                                <i class="bi bi-envelope me-2"></i>Email Address
                            </label>
                            <input type="email" class="form-control form-control-lg" id="email" name="email" 
                                placeholder="name@example.com" required autocomplete="email" autofocus />
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label fw-medium" style="color: var(--text-color);">
                                <i class="bi bi-shield-lock me-2"></i>Password
                            </label>
                            <input type="password" class="form-control form-control-lg" id="password" name="password" 
                                placeholder="Create a strong password" required autocomplete="new-password" />
                            <div class="form-text small">
                                <i class="bi bi-info-circle me-1"></i>Password should be at least 8 characters
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="role" class="form-label fw-medium" style="color: var(--text-color);">
                                <i class="bi bi-person-badge me-2"></i>Account Type
                            </label>
                            <select class="form-select form-select-lg" id="role" name="role" required>
                                <option value="" disabled selected>Select your account type</option>
                                <option value="User">Reader (Standard User)</option>
                                <option value="Admin">Administrator</option>
                            </select>
                            <div class="form-text small">
                                <i class="bi bi-info-circle me-1"></i>Select "Reader" for a standard account
                            </div>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label small" for="agreeTerms">
                                I agree to the <a href="#" style="color: var(--secondary-color);">Terms of Service</a> and <a href="#" style="color: var(--secondary-color);">Privacy Policy</a>
                            </label>
                            <div class="invalid-feedback">You must agree before submitting.</div>
                        </div>
                        
                        <button type="submit" class="btn btn-lg w-100 mb-4" style="background-color: var(--secondary-color); color: white;">
                            <i class="bi bi-person-plus-fill me-2"></i>Create Account
                        </button>
                        
                        <div class="text-center">
                            <p class="mb-0 text-muted">Already have an account?</p>
                            <a href="/Account/Login" class="text-decoration-none fw-medium" style="color: var(--primary-color);">
                                Sign in instead
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>Back to home
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// JavaScript for form validation
document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('.needs-validation');
    
    Array.prototype.slice.call(forms).forEach(function(form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
});
</script>
