@model eBookLibrary.Models.Book

<div class="container mt-4">
    <h2>Edit Book</h2>

    <!-- Display Validation Errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Display TempData messages -->
    @if (TempData["DiscountError"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["DiscountError"]</div>
    }
    @if (TempData["DateError"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["DateError"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    <form method="post" action="/Admin/EditBook">
        @Html.AntiForgeryToken()
        <input type="hidden" name="BookId" value="@Model.BookId" />

        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div class="mb-3">
            <label for="Author" class="form-label">Author</label>
            <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" required />
        </div>

        <div class="mb-3">
            <label for="Publisher" class="form-label">Publisher</label>
            <input type="text" class="form-control" id="Publisher" name="Publisher" value="@Model.Publisher" required />
        </div>

        <div class="mb-3">
            <label for="PricePurchase" class="form-label">Original Price</label>
            <input type="number" step="0.01" class="form-control" id="PricePurchase" name="PricePurchase" value="@Model.PricePurchase" required />
        </div>

        <div class="mb-3">
            <label for="PriceBeforeDiscount" class="form-label">Discounted Price (Optional)</label>
            <input type="number" step="0.01" class="form-control" id="PriceBeforeDiscount" name="PriceBeforeDiscount" value="@Model.DiscountedPrice" />
        </div>

        <div class="mb-3">
            <label for="DiscountEndDate" class="form-label">Discount End Date (Max 7 days)</label>
            <input type="date" class="form-control" id="DiscountEndDate" name="DiscountEndDate" value="@Model.DiscountEndDate?.ToString("yyyy-MM-dd")" />
        </div>

        <!-- Dropdown for Format -->
        <div class="mb-3">
            <label for="Format" class="form-label">Format</label>
            <select class="form-select" id="Format" name="Format" required>
                @Html.Raw("<option value=\"\" disabled>Select a Format</option>")
                @foreach (var format in new[] { "epub", "fb2", "mobi", "pdf" })
                {
                    var isSelected = Model.Format == format ? "selected" : "";
                    @Html.Raw($"<option value=\"{format}\" {isSelected}>{format.ToUpper()}</option>")
                }
            </select>
        </div>



        <div class="mb-3">
            <label for="AvailableCopies" class="form-label">Available Copies</label>
            <input type="number" class="form-control" id="AvailableCopies" name="AvailableCopies" value="@Model.AvailableCopies" required />
        </div>

        <div class="mb-3">
            <label for="Genre" class="form-label">Genre</label>
            <select class="form-select" id="Genre" name="Genre" required>
                @Html.Raw("<option value=\"\" disabled>Select a Genre</option>")
                @foreach (var genre in new[] { "Fiction", "Non-Fiction", "Mystery", "Science", "Fantasy" })
                {
                    var isSelected = Model.Genre == genre ? "selected" : "";
                    @Html.Raw($"<option value=\"{genre}\" {isSelected}>{genre}</option>")
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="AgeLimit" class="form-label">Age Restriction</label>
            <input type="number" class="form-control" id="AgeLimit" name="AgeLimit" min="0" value="@Model.AgeLimit" required />
        </div>

        <div class="mb-3">
            <label for="Year" class="form-label">Year</label>
            <input type="number" class="form-control" id="Year" name="Year" value="@Model.Year" required />
        </div>

        <div class="mb-3 form-check">
            <input type="hidden" name="IsBorrowable" value="false" />
            <input type="checkbox" class="form-check-input" id="IsBorrowable" name="IsBorrowable" value="true" @(Model.IsBorrowable ? "checked" : "") />
            <label for="IsBorrowable" class="form-check-label">Is Borrowable</label>
        </div>

        <div class="mb-3 form-check">
            <input type="hidden" name="IsBuyOnly" value="false" />
            <input type="checkbox" class="form-check-input" id="IsBuyOnly" name="IsBuyOnly" value="true" @(Model.IsBuyOnly ? "checked" : "") />
            <label for="IsBuyOnly" class="form-check-label">Is Buy Only</label>
        </div>

        <div class="mb-3">
            <label for="CoverImage" class="form-label">Cover Image (optional)</label>
            <input type="text" class="form-control" id="CoverImage" name="CoverImage" value="@Model.CoverImage" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/Admin/ManageBooks" class="btn btn-secondary">Cancel</a>
    </form>
</div>
