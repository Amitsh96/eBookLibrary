{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "LibraryContext": "Server=(localdb)\\mssqllocaldb;Database=eBookLibraryDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "EmailSettings": {
        "SmtpServer": "smtp.gmail.com",
        "Port": 587,
        "EnableSsl": true,
        "SenderEmail": "your-library@gmail.com",
        "SenderName": "eBook Library System",
        "UseDefaultCredentials": false
    },
    "AppSettings": {
        "JwtSecret": "your-256-bit-secret",
        "JwtIssuer": "eBookLibrary",
        "JwtAudience": "eBookLibraryUsers",
        "JwtExpiryInDays": 7,
        "PasswordResetTimeoutMinutes": 30,
        "MaxLoginAttempts": 5,
        "LockoutDurationMinutes": 30,
        "SessionTimeoutMinutes": 30,
        "MaxBorrowPeriodDays": 14,
        "MaxBooksPerUser": 5
    },
    "SecuritySettings": {
        "RequireHttps": true,
        "EnableXsrfProtection": true,
        "EnableCors": true,
        "AllowedOrigins": [
            "https://localhost:7214",
            "https://localhost:5001"
        ]
    },
    "CacheSettings": {
        "DefaultExpirationMinutes": 60,
        "EnableResponseCaching": true
    },
    "CookieSettings": {
        "SecurePolicy": "Always",
        "SameSite": "Lax",
        "SessionCookie": {
            "Name": ".eBookLibrary.Session",
            "HttpOnly": true,
            "ExpirationMinutes": 30
        },
        "AuthenticationCookie": {
            "Name": ".eBookLibrary.Authentication",
            "HttpOnly": true,
            "ExpirationMinutes": 60
        }
    }
}
